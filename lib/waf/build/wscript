#! /usr/bin/env python
# encoding: utf-8

VERSION = '0.0.2'
APPNAME = 'build_bench'
top  = '.'
out  = 'out'

def configure(conf):
	conf.load('g++')

def build(bld):
	for i in xrange(13):
		filez = ' '.join(['lib_%d/class_%d.cpp' % (i, j) for j in xrange(100)])
		bld.stlib(
			source = filez,
			target = 'lib_%d' % i,
			includes = '.', # include the top-level
		)
